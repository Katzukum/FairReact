{
    "manifest_version": 3,
    "name": "FairReact",
    "version": "1.1",
    "description": "Sync YouTube video playback between Host and Viewers.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "http://localhost:3000/*",
        "http://127.0.0.1:3000/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:3000 http://127.0.0.1:3000 ws://localhost:3000 ws://127.0.0.1:3000;"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "background": {
        "scripts": [
            "socket.io.js",
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "socket.io.js"
            ],
            "matches": [
                "https://www.youtube.com/*"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "fairreact@example.com",
            "strict_min_version": "109.0"
        }
    }
}